                                    <Insets top="5.0" />
                                 </HBox.margin></TextField>
      			          <TextField fx:id="txtValue" maxHeight="50.0" maxWidth="140.0" minHeight="50.0" minWidth="140.0" onKeyReleased="#validateFields" prefHeight="50.0" prefWidth="140.0" promptText="Valor R$">
