               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnNext" layoutX="813.0" layoutY="8.0" mnemonicParsing="false" onAction="#btnNextAction" prefHeight="45.0" prefWidth="182.0" styleClass="bt-next" text="Avançar">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
