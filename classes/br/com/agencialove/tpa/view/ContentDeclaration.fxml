            <Label alignment="CENTER" contentDisplay="CENTER" layoutY="25" prefHeight="30" prefWidth="1024.0" styleClass="txt-label-service-teste" text="POSTAGEM NACIONAL" />
         </children>
      </Pane>
      <Pane layoutX="0.0" layoutY="82.0" prefHeight="8.0" prefWidth="1024.0" styleClass="footer-page" />
      <Pane layoutX="0.0" layoutY="90.0" prefHeight="650" prefWidth="1024.0" styleClass="sub-header-page">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutY="28.0" prefHeight="30.0" prefWidth="1024.0" styleClass="sub-txt-label-tela-teste" text="Declaraçao de Conteúdo" />
            <ScrollPane layoutX="86.0" layoutY="99.0" prefHeight="483.0" prefWidth="840.0">
               <content>
               <VBox>
                  <children>
                  	  <HBox alignment="top_left" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
                     <children>
      			          <TextField fx:id="txtId" disable="true" maxHeight="50.0" maxWidth="30.0" minHeight="50.0" minWidth="25.0" onKeyReleased="#validateFields" prefHeight="50.0" prefWidth="25.0" promptText="0">
                                 <HBox.margin>
                                    <Insets left="5.0" top="5.0" />
                                 </HBox.margin></TextField>
      			          <TextField fx:id="txtDescription" maxHeight="50.0" maxWidth="478.0" minHeight="50.0" minWidth="478.0" onKeyReleased="#validateFields" prefHeight="50.0" prefWidth="478.0" promptText="Descrição">
                                 <HBox.margin>
                                    <Insets top="5.0" />
                                 </HBox.margin></TextField>
      			          <TextField fx:id="txtQuantity" maxHeight="50.0" maxWidth="90.0" minHeight="50.0" minWidth="90.0" onKeyReleased="#validateFields" prefHeight="50.0" prefWidth="90.0" promptText="Qde">
