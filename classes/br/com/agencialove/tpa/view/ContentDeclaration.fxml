                                    <Insets top="5.0" />
                                 </HBox.margin></TextField>
      			          <Button fx:id="btnAdd" minHeight="50.0" minWidth="50.0" onAction="#btnAddAction" text="+">
                                 <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </HBox.margin></Button>
                     </children>
   			     </HBox>
                     <TableView fx:id="tableView" layoutX="13.0" layoutY="354.0" prefHeight="227.0" prefWidth="840.0" style="-fx-font-size: 22;">
           				<columnResizePolicy>
   			            	<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           				</columnResizePolicy>
   		        	<placeholder>
   		       			<Label text="Declare aqui os intens contidos na encomenda." />
   		    		</placeholder>
   			        <columns>
   						<TableColumn id="tbcolId" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" text="#">
